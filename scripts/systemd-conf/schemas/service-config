[Unit]
Description=Example
After=network.target

[Service]
Type=simple
User=root
Group=root
ExecStart=/bin/true
ExecStop=/bin/true
KillMode=control-group
KillSignal=SIGTERM
PIDFile=/run/pid.pid
Restart=on-failure
RestartSec=2
TimeoutStopSec=5
DynamicUser=no
EnvironmentFile=/opt/envs/service
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
